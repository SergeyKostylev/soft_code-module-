{% extends'layout.html.twig' %}
{% block content %}


    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-1 col-md-3 col-lg-3 col-xl-4">

            </div>

            <div class="col-sm-10 col-md-6 col-lg-6 col-xl-4">
                <div class="card bg-light mb-3 margin-top21px">
                    <div class="card-header"><h5>Регистрация</h5></div>
                    <div class="card-body">
                        <form  method="post">
                            <div class="form-group">
                                <label>E-mail:</label>
                                <input class="form-control" type="text" name="email" placeholder="Email:" value="{{ form.email }}"/>
                            </div>
                            <div class="form-group">
                                <label>Пароль:</label>
                                <input type="password" name="password" class="form-control" placeholder="Пароль . . ."/>
                            </div>
                            <div class="form-group">
                                <label>Повторите пароль:</label>
                                <input type="password" name="repeat_password"  class="form-control" placeholder="Повторите пароль . . ."/>
                            </div>
                            <button class="btn btn-success" type="submit" name="submit">Регистрация</button>
                        </form>
                    </div>
                </div>
            </div>


            <div class="col-sm-1 col-md-3 col-lg-3 col-xl-4">

            </div>
        </div>
    </div>






    {{ getFlash() }}
{% endblock %}