
{% extends'layout.html.twig' %}

{% block content %}

    <h1>Feedback</h1>
<div class="container-fluid">
    <form method="post" >
        <div class="form-row form-group ">
            <div class="col-7">
                <input  class="form-control" type="email" name="email" value="{{ form.email }}" placeholder="Email">
            </div>
            <div class="col">
                <input class="form-control" type="text" name="phone" value="{{ form.phone }}" placeholder="Phone">
            </div>
        </div>
        <div class="form-group">
            <textarea class="form-control" name="message">{{ form.message }}</textarea>
        </div>
        <div class="col-auto my-3">
            <input class="btn btn-primary" type="submit" name="submit">
        </div>
    </form>
</div>
{% endblock %}